<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>editAirplane</title>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@48,400,0,0"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/admin/adminDashboard.css" />
  </head>
  <body>
    <div class="container">
      <%- include('./partials/aside.ejs') %>
      <main>
        <h1>Add a flight</h1>
        <div class="master">
          <main class="container1">
            <form
              action="/admin/flights/addNewFlight"
              class="form"
              method="POST"
            >
              <div class="column">
                <div style="display: none" class="input-box">
                  <label>Flight ID</label>
                  <input type="text" name="flight_id" value="" />
                </div>
                <div class="input-box">
                  <label>Flight name</label>
                  <input type="text" name="flight_name" value="" required />
                </div>
              </div>
              <div class="column">
                <div class="input-box">
                  <label>Airplane Name</label>
                  <select
                    style="
                      padding: 3px;
                      width: 30%;
                      margin-left: 30px;
                      outline: none;
                      border: 1px solid #ddd;
                      border-radius: 6px;
                    "
                    name="airplane_name"
                    required
                  >
                    <option style="text-align: center" value="">
                      Choose an Airplane
                    </option>
                    <% airplanes.forEach(airplane => { %>
                    <option value="<%= airplane.airplane_name %>">
                      <%= airplane.airplane_name %>
                    </option>
                    <% }); %>
                  </select>
                </div>
              </div>
              <div class="column">
                <div class="input-box">
                  <label>From</label>
                  <input
                    type="text"
                    name="departure_location"
                    value=""
                    required
                  />
                </div>
                <div class="input-box">
                  <label>To</label>
                  <input
                    type="text"
                    name="arrival_location"
                    value=""
                    required
                  />
                </div>
              </div>
              <div class="column">
                <div class="input-box">
                  <label>Departure</label>
                  <input
                    type="datetime-local"
                    name="departure_time"
                    value=""
                    required
                  />
                </div>
                <div class="input-box">
                  <label>Arrival</label>
                  <input
                    type="datetime-local"
                    name="arrival_time"
                    value=""
                    required
                  />
                </div>
              </div>
              <div class="column">
                <div class="input-box">
                  <label>Gate</label>
                  <input type="text" name="gate" value="" required />
                </div>
              </div>
              <div class="column">
                <div class="input-box">
                  <label>Total seats</label>
                  <input type="text" name="total_seats" value="" required />
                </div>
              </div>
              <div class="column">
                <div class="input-box">
                  <label>Economy</label>
                  <input type="text" name="economy_price" value="" required />
                </div>
                <div class="input-box">
                  <label>Business</label>
                  <input type="text" name="business_price" value="" required />
                </div>
              </div>

              <button type="submit">Save</button>
            </form>
          </main>
        </div>
      </main>

      <%- include('./partials/right.ejs') %>
    </div>
  </body>
</html>
