<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Customers</title>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@48,400,0,0"
    />
    <link rel="stylesheet" href="/css/admin/adminDashboard.css" />
  </head>
  <body>
    <div class="container">
      <%- include('./partials/aside.ejs') %>
      <main>
        <h1>Customers</h1>
        <div class="search-bar">
          <input type="search" placeholder="Search Data..." />
        </div>
        <div class="table_body">
          <table>
            <thead>
              <tr>
                <th style="display: none">Client ID</th>
                <th>No</th>
                <th>First Name</th>
                <th>Middle Name</th>
                <th>Last Name</th>
                <th>Date of birth</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Passport</th>
                <th>Edit</th>
                <th>Delete</th>
              </tr>
            </thead>
            <tbody>
              <% for (var i=0; i < users.length; i++) { %>
              <tr>
                <td style="display: none"><%= users[i].client_id %></td>
                <td><%= i + 1 %></td>
                <td><%= users[i].fname %></td>
                <td><%= users[i].mname %></td>
                <td><%= users[i].lname %></td>
                <td><%= users[i].date_of_birth %></td>
                <td><%= users[i].phone %></td>
                <td><%= users[i].email %></td>
                <td><%= users[i].passport %></td>
                <td>
                  <div class="div-edit">
                    <form
                      method="get"
                      action="/admin/customers/editcustomer/<%= users[i].client_id %>/"
                    >
                      <button type="submit" class="btn btn-edit">Edit</button>
                    </form>
                  </div>
                </td>
                <td>
                  <div class="div-delete">
                    <form
                      method="post"
                      action="/admin/deletecustomer/<%= users[i].client_id %>/"
                    >
                      <input
                        type="hidden"
                        name="client_id"
                        value="<%= users[i].client_id %>"
                      />
                      <button type="submit" class="btn btn-delete">
                        Delete
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </main>
      <%- include('./partials/right.ejs') %>
    </div>
    <script src="/js/admin/search.js"></script>
  </body>
</html>
