<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Airplanes</title>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@48,400,0,0"
    />
    <link rel="stylesheet" href="/css/admin/adminDashboard.css" />
  </head>
  <body>
    <div class="container">
      <%- include('./partials/aside.ejs') %>
      <main>
        <h1>Airplanes</h1>
        <button
          onclick="window.location.href='/admin/airplanes/addNewAirplane'"
          type="submit"
          class="btn btn-edit"
          style="
            text-transform: none;
            width: 20%;
            color: black;
            font-size: 15px;
            font-weight: 550;
            margin-top: 10px;
            background-color: #61c7f7;
          "
        >
          Add a new Airplane
        </button>
        <div class="search-bar">
          <input type="search" placeholder="Search Data..." />
        </div>
        <div class="table_body">
          <!-- <h2>Customers</h2> -->
          <table>
            <thead>
              <tr>
                <th style="display: none">Airplane ID</th>
                <th>No</th>
                <th>Airplane Name</th>
                <th>Flight</th>
                <th>Manufacturer</th>
                <th>Jet engine</th>
                <th>Wheels</th>
                <th>Fuselage</th>
                <th>Wing</th>
                <th>Edit</th>
                <th>Delete</th>
              </tr>
            </thead>
            <tbody>
              <% for (var i=0; i < airplanes.length; i++) { %>
              <tr>
                <td style="display: none"><%= airplanes[i].airplane_id %></td>
                <td><%= i + 1 %></td>
                <td><%= airplanes[i].airplane_name %></td>
                <td>
                  <%= airplanes[i].Flight ? airplanes[i].Flight.flight_name :
                  'No Flight Assigned' %>
                </td>
                <td><%= airplanes[i].manufacturer %></td>
                <td><%= airplanes[i].jet_engine %></td>
                <td><%= airplanes[i].wheels %></td>
                <td><%= airplanes[i].fuselage %></td>
                <td><%= airplanes[i].wing %></td>
                <td>
                  <div class="div-edit">
                    <form
                      method="get"
                      action="/admin/airplanes/editAirplane/<%= airplanes[i].airplane_id %>"
                    >
                      <button type="submit" class="btn btn-edit">Edit</button>
                    </form>
                  </div>
                </td>
                <td>
                  <div class="div-delete">
                    <form
                      method="post"
                      action="/admin/deleteairplane/<%= airplanes[i].airplane_id %>/"
                    >
                      <input
                        type="hidden"
                        name="airplane_id"
                        value="<%= airplanes[i].airplane_id %>"
                      />
                      <button type="submit" class="btn btn-delete">
                        Delete
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </main>
      <%- include('./partials/right.ejs') %>
    </div>
    <script src="/js/admin/search.js"></script>
  </body>
</html>
